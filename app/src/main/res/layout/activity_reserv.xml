<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    tools:context=".ReservActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:layout_marginRight="10dp"
            android:text="Your name: " />

        <EditText
            android:id="@+id/nameVariable"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:textSize="20sp"
            android:background="@color/colorLightPink"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateAndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:text="Date and time of the reservation:" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="6"
            android:background="@color/colorLightPink"
            android:hint="YYYY.MM.DD."
            android:gravity="center"
            android:ems="10"
            android:layout_marginRight="10dp"
            android:inputType="date" />

        <EditText
            android:id="@+id/fromTime"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="4"
            android:hint="HH:MM"
            android:gravity="center"
            android:background="@color/colorLightPink"
            android:ems="10"
            android:inputType="time" />

        <TextView
            android:id="@+id/dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="25sp"
            android:text="-" />

        <EditText
            android:id="@+id/toTime"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="4"
            android:hint="HH:MM"
            android:gravity="center"
            android:background="@color/colorLightPink"
            android:ems="10"
            android:inputType="time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="Number of participants:" />

        <EditText
            android:id="@+id/seats"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:background="@color/colorLightPink"
            android:ems="10"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="Name of Your section:" />

        <EditText
            android:id="@+id/sectionVariable"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="13dp"
            android:background="@color/colorLightPink"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="bottom">

        <Switch
            android:id="@+id/Projector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="Projector" />

        <Switch
            android:id="@+id/videoCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="Video call" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Switch
            android:id="@+id/whiteboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="White Board" />

        <Switch
            android:id="@+id/smartBoard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="Smartboard" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="top"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/secret"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="Secret"
            />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="."
            android:textColor="@color/colorWhite"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/qrButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:background="@color/colorOriginalPink"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="50dp"
            android:textSize="25sp"
            android:text="QR" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="top"
            android:layout_weight="3"
            android:background="@color/colorOriginalPink"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:onClick="onClick"
            android:text="Submit" />
    </LinearLayout>

</LinearLayout>